type Feedback implements BaseEntity {
  id: Int!
  createdAt: Date!
  updatedAt: Date!

  name: String
  description: String
  type: String
  status: String
  images: [String]

  replies: [FeedbackReply]
}

type FeedbackReply implements BaseEntity {
  id: Int!
  createdAt: Date!
  updatedAt: Date!

  senderType: String
  description: String
}

type APIPagedFeedback implements PagedQuery {
  total: Int
  page: Int
  size: Int
  items: [Feedback]
}

extend type Query {
  api_paged_feedback(pageRequest: PageRequest): APIPagedFeedback
}
