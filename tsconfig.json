{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false, // TODO
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": true,
    "declarationDir": "declaration",
    "baseUrl": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/*.spec.ts"
  ]
}
